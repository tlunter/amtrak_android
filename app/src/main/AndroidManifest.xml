<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tlunter.amtrak" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tlunter.amtrak.StatusDisplay"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tlunter.amtrak.RouteSettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="com.tlunter.amtrak.StatusDisplay" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tlunter.amtrak.StatusDisplay" />
        </activity>
        <activity
            android:name=".EditRouteSettingsActivity"
            android:label="@string/add_route_settings"
            android:parentActivityName="com.tlunter.amtrak.RouteSettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tlunter.amtrak.RouteSettingsActivity" />
        </activity>

        <meta-data
            android:name="DATABASE"
            android:value="trains.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.tlunter" />
    </application>

</manifest>
